{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "widgets-lib": {
      "projectType": "library",
      "root": "projects/widgets-lib",
      "sourceRoot": "projects/widgets-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/widgets-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/widgets-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/widgets-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/widgets-lib/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    },
    "app": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/app",
      "sourceRoot": "projects/app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/app",
            "index": "projects/app/src/index.html",
            "browser": "projects/app/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/app/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/app/public"
              },
              {
                "glob": "**/*",
                "input": "projects/app/assets"
              }            
            ],
            "styles": [
              "projects/app/src/styles.css"
            ],
            "scripts": [],
            "server": "projects/app/src/main.server.ts",
            "prerender": true,
            "ssr": {
              "entry": "projects/app/server.ts"
            }
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kB",
                  "maximumError": "4kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "app:build:production"
            },
            "development": {
              "buildTarget": "app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/app/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/app/public"
              }
            ],
            "styles": [
              "projects/app/src/styles.css"
            ],
            "scripts": []
          }
        }
      }
    },
    "widget": {
      "projectType": "library",
      "root": "projects/widget",
      "sourceRoot": "projects/widget/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/widget/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/widget/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/widget/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/widget/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "f4791c3f-155f-4a4d-b412-6b8035bab870"
  }
}
